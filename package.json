{
  "name": "wait-for-jobs",
  "version": "0.0.0",
  "private": true,
  "description": "Wait for the specified jobs in the same run to complete successfully before proceeding",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist bin && ncc build --source-map --license licenses.txt -o dist src/index.ts",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "test": "vitest --coverage --run",
    "all": "npm run format && npm run lint && npm test && npm run build"
  },
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yogeshlonkar/wait-for-jobs.git"
  },
  "keywords": [
    "actions",
    "wait",
    "prestart",
    "jobs",
    "steps"
  ],
  "author": "yogeshlonkar",
  "license": "MIT",
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@actions/artifact": "^5.0.1",
    "@actions/core": "^2.0.1",
    "@actions/github": "^6.0.1",
    "@octokit/core": "^7.0.6",
    "@octokit/plugin-retry": "^8.0.3",
    "@octokit/rest": "^22.0.1",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@octokit/openapi-types": "^27.0.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vercel/ncc": "^0.38.4",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "js-yaml": "^4.1.1",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "vitest": "^4.0.16"
  }
}
